				button.search__btn(class='search__btn--1024')
					+icon('search', 'search__icon')

				nav.nav 
					ul.nav__list
						li.nav__item
							a.nav__link(href="" data-section='about' tabindex = '2') О нас
						li.nav__item
							a.nav__link(href="" data-section='gallery' tabindex = '3') Галерея
						li.nav__item
							a.nav__link(href="" data-section='catalog' tabindex = '4') Каталог
						li.nav__item
							a.nav__link(href="" data-section='events' tabindex = '5') События
						li.nav__item
